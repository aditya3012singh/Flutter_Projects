import 'package:flutter/material.dart';
import 'package:todo_app/views/widgets/sidebar_item.dart';
import 'package:todo_app/views/widgets/note_nexus_logo.dart';
import 'package:todo_app/main.dart'; // for themeNotifier

class AppSidebar extends StatelessWidget {
  const AppSidebar({super.key});

  @override
  Widget build(BuildContext context) {
    return Drawer(
      backgroundColor: Theme.of(context).scaffoldBackgroundColor,
      child: SafeArea(
        child: Column(
          children: [
            const Padding(
              padding: EdgeInsets.all(16.0),
              child: NoteNexusLogo(iconSize: 48, textSize: 28),
            ),
            const Divider(),

            SidebarItem(
              icon: Icons.home,
              title: 'Home',
              onTap: () {
                Navigator.pushNamed(context, '/home');
              },
            ),
            SidebarItem(
              icon: Icons.person,
              title: 'Profile',
              onTap: () {
                Navigator.pushNamed(context, '/profile');
              },
            ),
            SidebarItem(
              icon: Icons.settings,
              title: 'Settings',
              onTap: () {
                Navigator.pushNamed(context, '/settings');
              },
            ),

            const Spacer(),

            SidebarItem(
              icon: Icons.brightness_6,
              title: 'Toggle Theme',
              onTap: () {
                themeNotifier.value = themeNotifier.value == ThemeMode.dark
                    ? ThemeMode.light
                    : ThemeMode.dark;
              },
            ),
            const SizedBox(height: 16),
          ],
        ),
      ),
    );
  }
}
